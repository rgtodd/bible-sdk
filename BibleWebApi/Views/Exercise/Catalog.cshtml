@using BibleCore.Service.Data
@using BibleWebApi.Models
@model ExerciseCatalogModel
@{
    ViewData["Title"] = "Exercisies";
}
<h2>Practice</h2>
@foreach (var category in Model.Categories)
{
    <h5>@category.Name</h5>
    <div class="row">
        @foreach (var categoryItem in category.Items)
        {
            <div class="col-4 col-md-3 col-lg-2 col-xl-2 text-center">
                <p>
                    <a asp-controller="Exercise" asp-action="Start" asp-route-categoryName="@categoryItem.CategoryName" asp-route-name="@categoryItem.Name" class="btn btn-outline-primary">@categoryItem.Name</a>
                </p>
            </div>
        }
    </div>
}