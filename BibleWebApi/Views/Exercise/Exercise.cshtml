@using BibleCore.Service.Data
@using BibleWebApi.Models
@model ExerciseModel
@{
    ViewData["Title"] = "Exercise";
}
<h2>Exercise</h2>
@using (Html.BeginForm("Update", "Exercise", FormMethod.Post, null))
{
    foreach (var question in Model.Data.Questions)
    {
        <div class="row my-2" id="word-@question.Sequence">
            <div class="col-12 col-md-2" style="font-family: 'Times New Roman', Times, serif">
                @question.Question
            </div>
            <div class="col">
                @foreach (var answer in question.Answers)
                {
                    <input type="submit" value="@answer.Answer" asp-controller="Exercise" asp-action="Update" asp-route-word="@question.Question" asp-route-option="@answer.Answer" class="btn @answer.BootstrapButtonClass submit" onclick="maintainscrollposition()" />
                }
            </div>
        </div>
    }
    <input type="hidden" asp-for="@Model.Data" />
}
@section Scripts
{
    <script type="text/javascript" language="javascript">
        function maintainscrollposition() {
            var y = window.scrollY
            console.log(y);
            localStorage.setItem('topposition', y);
        }

        $(function () {
            var top = localStorage.getItem('topposition');
            window.scroll(0, top);
            localStorage.removeItem('topposition');
        });
    </script>
}