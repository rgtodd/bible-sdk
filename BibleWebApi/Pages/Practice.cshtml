@page
@model BibleWebApi.Pages.PracticeModel
@{
    ViewData["Title"] = "Practice";
}
<h2>Practice</h2>
@if (Model.ExerciseModel != null)
{
    <form method="post">
        @foreach (var word in Model.ExerciseModel.Words)
        {
            <div class="row my-2" id="word-@word.Sequence">
                <div class="col-12 col-md-2" style="font-family: 'Times New Roman', Times, serif">
                    @word.Word
                </div>
                <div class="col">
                    @foreach (var option in word.Options)
                    {
                        <input type="submit" value="@option.Option" formaction="~/Practice?word=@word.Word&option=@option.Option" class="btn @option.BootstrapButtonClass submit" onclick="maintainscrollposition()" />
                    }
                </div>
            </div>
        }
        <input type="hidden" asp-for="ExerciseModel" />
    </form>
}
@section Scripts
{
    <script type="text/javascript" language="javascript">
        function maintainscrollposition() {
            var y = window.scrollY
            console.log(y);
            localStorage.setItem('topposition', y);
        }

        $(function () {
            var top = localStorage.getItem('topposition');
            window.scroll(0, top);
            localStorage.removeItem('topposition');
        });
    </script>
}