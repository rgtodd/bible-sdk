<div class="card text-center" style="width: 25rem">
    <form method="post" >
        <fieldset>
          <legend>Lookup</legend>
          <div>
            <label for="CompanyName">Strongs:</label>
            <input type="text" name="Strongs" value="" />
          </div>
          <div>
            <label>&nbsp;</label>
            <input type="submit" value="Submit" class="submit" />
          </div>
        </fieldset>
      </form>
    <div class="card-body">
        <h5 class="card-title" style="font-family: 'Times New Roman', Times, serif">@Model.LexemeData?.Lemma</h5>
                <p class="card-text" style="font-family: 'Times New Roman', Times, serif">@Model.LexemeData?.PartOfSpeech</p>
        <p class="card-text">@Model.LexemeData?.Gloss</p>
        <p class="card-text">Strongs: @string.Join(',', Model.LexemeData.Strongs.Select(s => s.ToString()).ToArray())</p>
        <p class="card-text">GK: @string.Join(',', Model.LexemeData.Gk.Select(s => s.ToString()).ToArray())</p>
        <p class="card-text" style="font-family: 'Times New Roman', Times, serif">-ου, ὁ</p>
        <p class="card-text" style="font-family: 'Times New Roman', Times, serif">*ἀγγελο</p>
        <p class="card-text">
            <button type="button" class="btn btn-primary">angel; messenger</button>
            <button type="button" class="btn btn-primary">angel; messenger</button>
            <button type="button" class="btn btn-primary">angel; messenger</button>
        </p>
        @foreach(var form in Model.LexemeData.Forms)
        {
            <p>@form.Word</p>
            <p>@form.Inflection.Case
            @form.Inflection.Degree
            @form.Inflection.Gender
            @form.Inflection.Mood
            @form.Inflection.Number
            @form.Inflection.Person
            @form.Inflection.Tense
            @form.Inflection.Voice</p>
            <p>
            @foreach (var r in form.References)
            {
                <span>@r.Bookmark</span>
            }
            </p>
        }
        <p class="card-text">Noun - masculine</p>
        <p class="card-text">G32 / 4</p>
    </div>
</div>